#include <stdio.h>

int main()
{

    char temps[49];
    int soma = 0 ,media = 0,cont = 0;

    for(int i = 0; i <= 49; i++){
    
        printf("Digite temperaturas entre -100 e 100 graus celsius\n");
        scanf("%d", &temps[i]);
        soma = soma+temps[i];
    
    }

    media = soma/49;

    for(int i = 0; i <= 49; i++){
        
        if(temps[i] > media){
        
            cont++;
        }
    }

    printf("Quantidade de temperaturas acima da m√©dia: %d\n",cont);

}
